                                a(href='#')
                                    img.img-responsive(:src='item.pic')
                        // Add Pagination
                        .pagination
                            div
                                h5
                            .index

        .co.center
            label.h4 专业建设
            .more
                a(href='/sconstruction')
                    span +more
            .two.sc

    .container.center
        .youshi-title.clear
            .type
                label.h4
                    | 党团
                    span 建设
