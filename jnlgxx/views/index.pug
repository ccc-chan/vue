block content
    script(type="text/javascript" src='offical/js/index.js')
    .center.banner
        img.img-responsive.pc-bg(src='offical/images/banner.jpg')
        img.img-responsive.m-bg(src='offical/images/m-banner.png')
    .container.center
        .type
            label.h4
                | 新闻
                span 中心
            span News Reporting Center
            p
        .clear
            .width-6.dyn
                div
                    label.h4 学校动态
                    .more
                        a(href='dynamics')
                            span +more
                .dyn-list

            .width-3.jiuye
