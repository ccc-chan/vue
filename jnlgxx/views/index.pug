                    span  School Environment
                .more.thumb
                    span +more
                p
            .campus-box
                .col-md-3.col-xs-6
                    img.img-responsive(src='offical/images/bg3.jpg')
                .col-md-3.col-xs-6
                    img.img-responsive(src='offical/images/bg4.jpg')
                .col-md-3.col-xs-6
                    img.img-responsive(src='offical/images/bg5.jpg')
                .col-md-3.col-xs-6
                    img.img-responsive(src='offical/images/bg6.jpg')
    div.banner-bottom
        img.img-responsive.pc-bg(src='offical/images/banner1.png')
        img.img-responsive.m-bg(src='offical/images/m-banner1.png')

